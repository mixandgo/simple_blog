<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= t('.title') %>
        <%= link_to t('.new_post'), new_admin_blog_post_path, :class => "btn btn-primary pull-right" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="simple-blog-posts-index">
      <% if @blog_posts.present? %>
        <table class="table">
          <tr>
            <th><%= t('.blog_post_title') %></th>
            <th><%= t('.blog_post_tags') %></th>
            <th><%= t('.blog_post_keywords') %></th>
            <th><%= t('.blog_post_published') %></th>
            <th><%= t('.blog_post_language')%></th>
            <th><%= t('.blog_post_delete') %></th>
          </tr>
          <% @blog_posts.each do |post| %>
            <tr class="simple-blog-post">
              <td class="simple-blog-post-title">
                <%= link_to post.pretty_title, edit_admin_blog_post_path(post.id) %>
              </td>
              <td class="simple-blog-post-tags">
                <%= post.tag_list %>
              </td>
              <td class="simple-blog-post-keywords">
                <%= post.keyword_list %>
              </td>
              <td class="simple-blog-post-published">
                <%= post.published? %>
              </td>
              <td class="simple-blog-post-language">
                <%= language_full_name(post.language) %>
              </td>
              <td class="simple-blog-post-delete">
                <%= link_to t('.delete'), admin_blog_post_path(post.id), :method => :delete, :data => { confirm: t('.are_you_sure') } %>
              </td>
            </tr>
          <% end %>
        </table>
        <%= paginate(@blog_posts) %>
      <% else %>
        <p class="simple-blog-posts-missing"><%= t('.no_published_posts') %></p>
      <% end %>
    </div>
  </div>
</div>
